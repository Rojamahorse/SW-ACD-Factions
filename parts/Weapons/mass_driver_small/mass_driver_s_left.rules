Part : &<mass_driver_s.rules>/Part
{
	//IDs
	ID = SW.fighter_mass_driver_cannon_left
	OtherIDs = [SW.long_fighter_xwing_cannon_right, SW.long_fighter_xwing_cannon_left]
	FlipWhenLoadingIDs = [SW.long_fighter_xwing_cannon_right]

	//StringKeys
	NameKey = "Parts/massdriversmallLeft"
	IconNameKey = "Parts/massdriversmallLeftIcon"
	DescriptionKey = "Parts/massdriversmallDesc"
	
	//Groups&Categories
	
	//Resources&Size&Health
	
	//Rects
	//ProhibitRects
	//[
	//	[fighter, [-2, -1, 2, 1]]
	//]
    //ProhibitAboveLeft=2
	//Selections
	
	//PartSpecific
	IsFlippable = true
	
	//ReceivableBuffs
	
	//Doors&Etc
	
	//Editor
	EditorIcon
	{
		Texture
		{
			File = "icon_left.png"
			SampleMode = Linear
		}
		Size = [96, 48]
	}
	
	//Components
	Components : ^/0/Components
	{
		Turret : &<mass_driver_s.rules>/Part/Components/Turret
		{
			Rotation = -180d
			AllowFireWithBlockedLOS = true
			IgnoreSourceShipLowLOSChecks = true
			IgnoreFriendlyShipLowLOSChecks = false
		}

		RecoilEffects : &<mass_driver_s.rules>/Part/Components/RecoilEffects
		{
			Type = TriggeredEffects
			ChainedTo = RecoilProjectile
			Rotation = -180d
			Trigger = RecoilTimer
			HitEffects
			[
				{
					Type = Impulse
					Impulse = 200
				}
			]
		}

		Blueprints : &<mass_driver_s.rules>/Part/Components/Blueprints
		{
			Type = BlueprintSprite
			File = "blueprints_left.png"
			Size = [4, 2]
			Offset = [-1.5, -0.5]
		}
	}
}
