Part : &<../tie_minigun/tie_minigun.rules>/Part
{
	NameKey = "Parts/tieMinigunLong"
	IconNameKey = "Parts/tieMinigunLongIcon"
	ID = SW.fighter_long_tie_minigun
	OtherIDs = [] //Clears the array
	EditorGroup = "WeaponsEnergy"
	DescriptionKey = "Parts/tieLMinigunLongDesc"
	ProhibitRects
	[
		[fighter, [0, -3, 1, 3]]
	]
	EditorIcon
	{
		Texture
		{
			File = "icon1.png"
			SampleMode = Linear
		}
		Size = [16, 64]
	}
	Components : ^/0/Components
	{
		BulletEmitter : &<../tie_minigun/tie_minigun.rules>/Part/Components/BulletEmitter
		{
			Location = [2.5, 0]
		}

		FireEffect : &<../tie_minigun/tie_minigun.rules>/Part/Components/FireEffect
		{
			Type = TriggeredEffects
			ChainedTo = Turret
			Trigger = Turret
			Location = [2.85, 0]
			AnchorMediaEffects = true

			MediaEffects
			[
				&<../tie_minigun/particles/minigun_shoot.rules>
				&<../tie_minigun/particles/minigun_flash.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound =  "./Data/ships/terran/laser_blaster_small/shoot.wav"
					Volume = .6
					SpeedVariation = .25
					MaxConcurrent = 10
				}
			]
		}


		TurretGraphics
		{
			Type = Graphics
			ChainedTo = Turret
			Location = [1.25, 0]
			Rotation = 90d
			OperationalToggle = IsOperational
			NonOperationalDoodad
			{
				Layer = "turrets"
				DamageLevels
				[
					{
						File = "barrel1_off.png"
						NormalsFile = "barrel1_normals1.png"
						Size = [1, 3]
					}
				]
			}
		}

		WeaponSprite
		{
			Type = Sprite
			ChainedTo = Turret
			Location = [1.25, 0]
			Rotation = 90d
			Layer = "turrets"
			ResetAnimationTrigger = Turret
			OperationalToggle = IsOperational
			AtlasSprite
			{
				AnimationFiles
				[
					"barrel1_on2.png"
					"barrel1_on1.png"
				]
				NormalsAnimationFiles
				[
					"barrel1_normals1.png"
					"barrel1_normals2.png"
				]
				Size = [1, 3]
				AnimationInterval = 0.05
				AnimationStartTime = MinValue
				ClampAnimation = true
			}
		}

		Blueprints
		{
			Type = BlueprintSprite
			File = "blueprints.png"
			Size = [1, 4]
			Offset = [0, -1.5]
		}
	}
}
