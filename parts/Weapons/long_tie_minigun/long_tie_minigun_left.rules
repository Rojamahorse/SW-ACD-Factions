		TurretGraphics : &<long_tie_minigun.rules>/Part/Components/TurretGraphics
		{
			Location = [1.36, .10]
		}

		WeaponSprite : &<long_tie_minigun.rules>/Part/Components/WeaponSprite
		{
			Location = [1.36, .10]
		}

		Blueprints
		{
			Type = BlueprintSprite
			File = "blueprints_left.png"
			Size = [4, 2]
			Offset = [-1.5, -0.5]
		}
	}
