ID = SW.3.StarWarsFactions
Name = "Star Wars Factions"
Version = 0.1.1
CompatibleGameVersions = ["0.25.0","0.24.0","0.23.0"]
ModifiesGameplay = true
Author = "Rojamahorse & SW:ACD DevTeam"
Logo = "logo.png"
Description = "Step up your game with the ultimate companion mod to <yellow>Star Wars: A Cosmos Divided</yellow>! \n\nChoose your side—from the <gray>Galactic Empire</gray> and <orange>Rebel Alliance</orange> to the <red>Republic</red> and <blue>CIS</blue> — or navigate the criminal underworld with <magenta>Black Sun</magenta>. \n\nKick off your journey with iconic ships, venture into expansive new maps, and craft your own interstellar adventure. This is the Cosmoteer mod you've been searching for! \n\n<b>Ship Contributions by:</b> ClassicJam, Neojino, Wolfram, Fusion, and the Steam Community! \n\n<bad><b>Important:</b> This mod is an extension of <yellow>Star Wars: A Cosmos Divided</yellow> and requires it for full functionality. Please ensure you have the base mod installed.</bad>"
StringsFolder = "strings"
